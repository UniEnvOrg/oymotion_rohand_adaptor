{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "llmapi": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LLMAPI Default Coding",
      "options": {
        "baseURL": "{env:OPENAI_BASE_URL}",
        "apiKey": "{env:OPENAI_API_KEY}"
      },
      "models": {
        "default-coding": {
          "name": "Default coding model",
          "limit": {
            "context": 200000,
            "output": 56000
          }
        }
      }
    }
  }
}